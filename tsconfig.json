  "compilerOptions": {
    "module": "ESNext",                 
    "moduleResolution": "Node",        
    "target": "ES6",                   
    "rootDir": "./src",                
    "outDir": "./dist",                
    "esModuleInterop": true,           
    "strict": true                    
  },
  "include": ["src/**/*"],             
  "exclude": ["node_modules", "dist"]  
}